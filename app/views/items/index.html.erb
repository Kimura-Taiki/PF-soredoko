<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>
<div class = "row h1">最近の登録</div>
<div class = "row d-flex">
  <% @items.each do |i| %>
    <div class = "col-xs-12 col-sm-6 col-md-4 col-lg-3 border mb-2">
      <% if i.image_id %>
        <%= attachment_image_tag i, :image, class: "w-100 h-75 objecvt-fit-cover" %>
      <% else %>
        <div class = "w-100 h-75">
          <p class = "h2"><%= i.name %></p>
          <p class = "h4"><%= i.introduction %></p>
        </div>
      <% end %>
      <div class = "w-75 border-bottom mx-auto"></div>
      <p class = "h4">in <%= i.position %></p>
    </div>
  <% end %>
</div>
